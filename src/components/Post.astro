---
interface Props {
    author: {
        name: string;
        handle: string;
        avatar: string;
    };
    date: string;
    media?: {
        type: "image" | "video";
        url: string;
        alt?: string;
    }[];
    faves?: number;
    reposts?: number;
    url: string; // Required - permalink
    sourceUrl?: string; // URL to original tweet on x.com
}

const { author, date, media = [], faves = 0, reposts = 0, url, sourceUrl } = Astro.props;

// Format date nicely
const postDate = new Date(date);
const dateStr = postDate.toLocaleString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
    hour: "numeric",
    minute: "numeric",
});

// Determine if we are on the single post page
const currentPath = Astro.url.pathname.replace(/\/$/, "");
const postPath = url.replace(/\/$/, "");
const isSingleView = currentPath === postPath;

// If on single view and we have a source URL, link to that. Otherwise link to the permalink.
const dateHref = isSingleView && sourceUrl ? sourceUrl : url;
const dateTarget = isSingleView && sourceUrl ? "_blank" : undefined;
const dateRel = isSingleView && sourceUrl ? "noopener noreferrer" : undefined;
---

<article class="tweet-post">
    <div class="header">
        <div class="user-info">
            <img src={author.avatar} alt={author.name} class="avatar" />
            <div class="names">
                <span class="name">{author.name}</span>
                <span class="handle">@{author.handle}</span>
            </div>
        </div>
        <a href={dateHref} class="permalink" target={dateTarget} rel={dateRel}>
            <time datetime={date}>{dateStr}</time>
        </a>
    </div>

    <div class="post-body">
        <!-- Avoid whitespace since text has white-space: pre-wrap -->
        <div class="text"><slot /></div>

        {
            media.length > 0 && (
                <div class={`media-grid media-${media.length}`}>
                    {media.map((item) => (
                        <div class="media-item">
                            {item.type === "video" ? (
                                <a href={item.url} target="_blank" rel="noopener noreferrer">
                                    <video src={item.url} controls preload="metadata" />
                                </a>
                            ) : (
                                <a href={item.url} target="_blank" rel="noopener noreferrer">
                                    <img src={item.url} alt={item.alt || ""} />
                                </a>
                            )}
                        </div>
                    ))}
                </div>
            )
        }
    </div>
</article>

<style>
    .tweet-post {
        border: 1px solid #e1e8ed;
        border-radius: 12px;
        padding: 0.75rem;
        max-width: 600px;
        margin: 0.25rem 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background: #fff;
        color: #14171a;
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .user-info {
        display: flex;
        align-items: center;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        margin-right: 0.5rem;
    }

    .names {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 40px;
        gap: 0;
        line-height: 1.2;
    }

    .name {
        font-weight: bold;
        font-size: 0.95rem;
        color: #14171a;
    }

    .handle {
        color: #657786;
        font-size: 0.85rem;
    }

    .permalink {
        color: #657786;
        font-size: 0.8rem;
        text-decoration: none;
        white-space: nowrap;
    }

    .permalink:hover {
        text-decoration: underline;
        color: #1b95e0;
    }

    .post-body {
        margin-top: 0.25rem;
    }

    .text {
        font-size: 0.95rem;
        line-height: 1.4;
        white-space: pre-wrap;
    }

    .text:not(:empty) {
        margin-bottom: 0.5rem;
    }

    /* Make links in text clickable and styled */
    .text :global(a) {
        color: #1b95e0;
        text-decoration: none;
    }
    .text :global(a:hover) {
        text-decoration: underline;
    }

    .media-grid {
        display: grid;
        gap: 2px;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e1e8ed;
    }

    .media-1 {
        grid-template-columns: 1fr;
    }
    .media-2 {
        grid-template-columns: 1fr 1fr;
    }
    .media-3 {
        grid-template-columns: 1fr 1fr;
    }
    .media-4 {
        grid-template-columns: 1fr 1fr;
    }

    .media-item a {
        display: block;
    }

    .media-item img,
    .media-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
        cursor: pointer;
    }
</style>
