---
interface Props {
    author: {
        name: string;
        handle: string;
        avatar: string;
    };
    date: string;
    media?: {
        type: "image" | "video";
        url: string;
        alt?: string;
    }[];
    link?: string;
    faves?: number;
    reposts?: number;
}

const { author, date, media = [], link, faves = 0, reposts = 0 } = Astro.props;

// Format date nicely
const postDate = new Date(date);
const dateStr = postDate.toLocaleString("en-US", {
    month: "short",
    day: "numeric",
    year: "numeric",
    hour: "numeric",
    minute: "numeric",
});
---

<article class="tweet-post">
    <div class="user-info">
        <img src={author.avatar} alt={author.name} class="avatar" />
        <div class="names">
            <span class="name">{author.name}</span>
            <span class="handle">@{author.handle}</span>
        </div>
    </div>

    <div class="post-body">
        <div class="text">
            <slot />
        </div>

        {
            media.length > 0 && (
                <div class={`media-grid media-${media.length}`}>
                    {media.map((item) => (
                        <div class="media-item">{item.type === "video" ? <video src={item.url} controls /> : <img src={item.url} alt={item.alt || ""} />}</div>
                    ))}
                </div>
            )
        }

        {
            link && (
                <a href={link} class="post-link" target="_blank" rel="noopener noreferrer">
                    {link}
                </a>
            )
        }

        <div class="meta">
            <time datetime={date}>{dateStr}</time>
        </div>

        <div class="stats">
            <span class="stat">
                <strong>{reposts}</strong> Reposts
            </span>
            <span class="stat">
                <strong>{faves}</strong> Likes
            </span>
        </div>
    </div>
</article>

<style>
    .tweet-post {
        border: 1px solid #e1e8ed;
        border-radius: 12px;
        padding: 1rem;
        max-width: 600px;
        margin: 1rem 0;
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        background: #fff;
        color: #14171a;
    }

    .user-info {
        display: flex;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .avatar {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        margin-right: 0.75rem;
    }

    .names {
        display: flex;
        flex-direction: column;
    }

    .name {
        font-weight: bold;
        color: #14171a;
    }

    .handle {
        color: #657786;
    }

    .post-body {
        margin-top: 5px;
    }

    .text {
        font-size: 1rem;
        line-height: 1.5;
        white-space: pre-wrap;
        margin-bottom: 1rem;
    }

    .media-grid {
        display: grid;
        gap: 2px;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 1rem;
        border: 1px solid #e1e8ed;
    }

    .media-1 {
        grid-template-columns: 1fr;
    }
    .media-2 {
        grid-template-columns: 1fr 1fr;
    }
    .media-3 {
        grid-template-columns: 1fr 1fr;
    } /* 3rd item setup omitted for brevity, usually complex grid */
    .media-4 {
        grid-template-columns: 1fr 1fr;
    }

    .media-item img,
    .media-item video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .post-link {
        display: block;
        color: #1b95e0;
        text-decoration: none;
        margin-bottom: 1rem;
        word-break: break-all;
    }

    .post-link:hover {
        text-decoration: underline;
    }

    .meta {
        color: #657786;
        font-size: 0.9rem;
        margin-bottom: 0.75rem;
        border-bottom: 1px solid #e1e8ed;
        padding-bottom: 0.75rem;
    }

    .stats {
        display: flex;
        gap: 1.5rem;
        font-size: 0.9rem;
        color: #657786;
    }

    .stats strong {
        color: #14171a;
    }
</style>
