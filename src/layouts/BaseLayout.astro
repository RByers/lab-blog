---
const { title, showHeaderImage = true } = Astro.props;
import { Image } from 'astro:assets';
import labHeader from '../assets/lab-short.jpg';
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | RByers Lab</title>
    <style is:global>
       /* Global styles for the lab theme */
       :root {
         --bg-color: #111;
         --text-color: #ccc;
         --accent-color: #0f9; /* Bio-luminescent green */
         --dim-color: #666;
         --border-color: #333;
         --font-mono: 'Courier New', Courier, monospace;
         --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
       }
       *, *::before, *::after {
           box-sizing: border-box;
       }
       body {
         background-color: var(--bg-color);
         color: var(--text-color);
         font-family: var(--font-mono);
         margin: 0;
         padding: 0;
         line-height: 1.6;
         overflow-x: hidden; /* Prevent horizontal scroll */
       }
       a { color: var(--accent-color); text-decoration: none; transition: opacity 0.2s; }
       a:hover { opacity: 0.8; text-decoration: underline; }
       nav {
         border-bottom: 1px solid var(--border-color);
         padding: 1rem 2rem;
         display: flex;
         justify-content: space-between;
         align-items: center;
         background: #000;
       }
       nav .brand { font-weight: bold; font-size: 1.2rem; letter-spacing: 2px; }
       nav ul { list-style: none; display: flex; gap: 1.5rem; margin: 0; padding: 0; }
       
       .header-image {
           width: 100%;
           max-width: 100%;
           height: auto;
           display: block;
           border-bottom: 1px solid var(--border-color);
           max-height: 300px;
           object-fit: cover;
       }

       main { max-width: 1024px; margin: 3rem auto; padding: 0 1rem; min-height: 70vh; }
       h1, h2, h3 { color: #fff; font-weight: normal; margin-top: 2rem; }
       h1 { border-bottom: 1px solid var(--border-color); padding-bottom: 0.5rem; margin-bottom: 2rem; font-size: 2rem; }
       footer { text-align: center; padding: 2rem; color: var(--dim-color); font-size: 0.8rem; border-top: 1px solid var(--border-color); margin-top: 4rem; }
       
       /* Utility classes */
       .date { color: var(--dim-color); font-size: 0.9rem; }
       .tag { background: #222; padding: 0.2rem 0.5rem; border-radius: 4px; font-size: 0.8rem; margin-right: 0.5rem; }
    </style>
  </head>
  <body>
    <nav>
      <div class="brand"><a href="/">RByers Lab</a></div>
      <ul>
        <li><a href="/">Essays</a></li>
        <li><a href="/posts">Posts</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>
    
    {showHeaderImage && <Image 
        src={labHeader} 
        alt="RByers Lab Panoramic View" 
        class="header-image"
        widths={[640, 1024, 1920]}
        sizes="(max-width: 640px) 640px, (max-width: 1024px) 1024px, 1920px"
    />}

    <main>
      <h1>{title}</h1>
      <slot />
    </main>
    <footer>
      &copy; {new Date().getFullYear()} Rick Byers.
    </footer>
  </body>
</html>
