---
const { title, showHeaderImage = true } = Astro.props;
import { Image } from "astro:assets";
import labHeader from "../assets/lab-short.jpg";
import "../styles/global.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} | RByers Lab</title>
  </head>
  <body>
    <nav>
      <div class="brand"><a href="/">RByers Lab</a></div>
      <ul>
        <li><a href="/">Essays</a></li>
        <li><a href="/posts/">Posts</a></li>
        <li><a href="/about">About</a></li>
      </ul>
    </nav>

    {
      showHeaderImage && (
        <Image
          src={labHeader}
          alt="RByers Lab Benchtop view"
          class="header-image"
          widths={[640, 1024, 1920]}
          sizes="(max-width: 640px) 640px, (max-width: 1024px) 1024px, 1920px"
          loading="eager"
        />
      )
    }

    <main>
      <h1>{title}</h1>
      <slot />
    </main>
    <footer>
      &copy; {new Date().getFullYear()} Rick Byers
    </footer>
  </body>
</html>
